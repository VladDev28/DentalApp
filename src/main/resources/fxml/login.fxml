<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controller.LoginController"
            prefHeight="600.0" prefWidth="800.0">

    <children>
        <VBox alignment="CENTER" spacing="15" layoutX="50" layoutY="30"
              AnchorPane.leftAnchor="150" AnchorPane.rightAnchor="150" AnchorPane.topAnchor="130" AnchorPane.bottomAnchor="130"
              styleClass="login-box">

            <Label text="Dental App Login" styleClass="title"/>

            <TextField fx:id="usernameField" promptText="Username" styleClass="input-field"/>
            <PasswordField fx:id="passwordField" promptText="Password" styleClass="input-field"/>

            <Button text="Login" onAction="#handleLogin" styleClass="login-button"/>
            <Label fx:id="errorLabel" textFill="red"/>
        </VBox>
    </children>

</AnchorPane>
